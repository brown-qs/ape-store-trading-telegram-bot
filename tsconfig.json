{
  "compilerOptions": {
    "module": "commonjs", // Compiled module system code
    "target": "ESNext", // designationecmascriptTarget version
    "noImplicitAny": false, // Prohibitanytype
    "outDir": "./dist",
    "sourceMap": false,
    "allowJs": false, // Whether to appearjs
    "newLine": "LF",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": true
  },
  "include": ["src/**/*", "index.ts"]
}
